Sub Clean_Claim()

' Delete text double brackets
With Selection.Find
    .Text = "(\[)(\[)(*)(\])(\])"
    .Replacement.Text = ""
    .MatchWildcards = True
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

' Delete text with strikethroughs
Dim oRng As Word.Range
Set oRng = ActiveDocument.Range
  With oRng.Find
    .MatchWildcards = True
    .Text = "*"
    .Replacement.Text = ""
    .MatchWildcards = True
    .Font.StrikeThrough = True
    .Execute Replace:=wdReplaceAll
  End With

' Remove underlining from text
Dim oRng As Word.Range
Set oRng = ActiveDocument.Range
  With oRng.Find
    .Text = "*"
    .MatchWildcards = True
    .Font.Underline = True
    While .Execute
      oRng.Font.Underline = wdUnderlineNone
    Wend
  End With

' Replace double space with single space (x3)
With Selection.Find
    .Text = "  "
    .Replacement.Text = " "
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With
With Selection.Find
    .Text = "  "
    .Replacement.Text = " "
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With
With Selection.Find
    .Text = "  "
    .Replacement.Text = " "
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

' Replace space-period with period
With Selection.Find
    .Text = " ."
    .Replacement.Text = "."
    .Forward = True
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

' Replace space-comma with comma
With Selection.Find
    .Text = " ,"
    .Replacement.Text = ","
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

' Replace space-semicolon with semicolon
With Selection.Find
    .Text = " ;"
    .Replacement.Text = ";"
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

' Replace space-colon with olon
With Selection.Find
    .Text = " :"
    .Replacement.Text = ":"
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

' Replace Currently Amended with Previously Presented
With Selection.Find
    .Text = "Currently Amended"
    .Replacement.Text = "Previously Presented"
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

' Replace New with Previously Presented
With Selection.Find
    .Text = "New"
    .Replacement.Text = "Previously Presented"
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

End Sub
