Sub Clean_Claim()

With Selection.Find
    .Text = "(\[)(\[)(*)(\])(\])"
    .Replacement.Text = ""
    .MatchWildcards = True
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

Dim oRng As Word.Range
Set oRng = ActiveDocument.Range
  With oRng.Find
    .Text = "*"
    .Font.StrikeThrough = True
    .Replacement.Text = ""
    .MatchWildcards = True
    .Execute Replace:=wdReplaceAll
  End With
  
With Selection.Find
    .Text = "  "
    .Replacement.Text = " "
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

With Selection.Find
    .Text = "  "
    .Replacement.Text = " "
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

With Selection.Find
    .Text = "  "
    .Replacement.Text = " "
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

With Selection.Find
    .Text = " ."
    .Replacement.Text = "."
    .Forward = True
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

With Selection.Find
    .Text = " ,"
    .Replacement.Text = ","
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

With Selection.Find
    .Text = " ;"
    .Replacement.Text = ";"
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

With Selection.Find
    .Text = " :"
    .Replacement.Text = ":"
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

With Selection.Find
    .Text = "Currently Amended"
    .Replacement.Text = "Previously Presented"
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

With Selection.Find
    .Text = "New"
    .Replacement.Text = "Previously Presented"
    .Wrap = wdFindContinue
    .Execute Replace:=wdReplaceAll
End With

Do While Selection.Find.Execute = True
If Selection.Font.Underline Then
Selection.Font.Underline = False
End If
Loop

End Sub
